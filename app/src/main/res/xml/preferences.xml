<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="pref_key_configuration"
        android:title="@string/pref_configuration_section_title">
        <CheckBoxPreference
            android:key="pref_key_configuration_intro_slider"
            android:title="@string/pref_configuration_keep_introduction_slider"
            android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_about"
        android:title="@string/pref_about_section_title">
        <Preference
            android:key="pref_key_send_feedback"
            android:title="@string/pref_feedback_title"/>
        <Preference
            android:summary="@string/pref_rate_google_play_summary"
            android:title="@string/pref_rate_google_play">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://play.google.com/store/apps/details?id=com.om.snipit" />
        </Preference>
        <Preference
            android:key="pref_key_open_source_libs"
            android:title="@string/pref_open_source_libraries_title" />
    </PreferenceCategory>
</PreferenceScreen>